<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A client for adding and querying metrics from kairosdb</Description>
    <VersionPrefix>0.2.2</VersionPrefix>
    <Authors>syncromatics, Kvikal</Authors>
    <TargetFrameworks>netstandard1.1</TargetFrameworks>
    <AssemblyName>Kvikal.KairosDbClient</AssemblyName>
    <PackageId>Kvikal.KairosDbClient</PackageId>
    <PackageTags>kairosdb</PackageTags>
    <PackageProjectUrl>https://github.com/Kvikal/KairosDbClientDotNet</PackageProjectUrl>
    <PackageLicense>https://raw.githubusercontent.com/Kvikal/KairosDbClientDotNet/master/LICENSE</PackageLicense>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.1' ">
    <PackageReference Include="System.Net.Http" Version="4.3.0" />
  </ItemGroup>

</Project>
